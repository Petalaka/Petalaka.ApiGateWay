{
  "GlobalConfiguration": {
    "BaseUrl": "http://ocelot-gateway:80"
  },
  "Routes": [
    {
      //Register downstream host and port
      "UpstreamPathTemplate": "/api/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete", "Patch" ],
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "api-account-staging.nodfeather.win",
          "Port": 443
        }
      ]
    },

    {
      //Register downstream host and port
      "UpstreamPathTemplate": "/api/signin-google",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/signin-google",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "api-account-staging.nodfeather.win",
          "Port": 443
        }
      ]
    },
    //Register downstream swagger ui
    {
      "UpstreamPathTemplate": "/swagger/account/v1/swagger.json",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete", "Patch" ],
      "DownstreamPathTemplate": "/swagger/v1/swagger.json",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "api-account-staging.nodfeather.win",
          "Port": 443
        }
      ]
    },

    {
      "UpstreamPathTemplate": "/swagger/order/v1/swagger.json",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete", "Patch" ],
      "DownstreamPathTemplate": "/swagger/v1/swagger.json",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": 8081
        }
      ]
    }

  ]
} 